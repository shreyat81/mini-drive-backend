# Mini Drive Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
#PORT=5001

# Database
#MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/minidrive?retryWrites=true&w=majority&appName=yourApp

# Security
#JWT_SECRET=your_super_secure_jwt_secret_here_minimum_32_characters

# Admin Account (change these immediately!)
#DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
#DEFAULT_ADMIN_PASSWORD=ChangeThisSecurePassword123!

# Frontend URL (update for production)
#FRONTEND_BASE_URL=http://localhost:5173

# Debug (set to false in production)
#DEBUG=false
